{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File (Hot Reload)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "autoReload": {
        "enable": true,
        "mode": "onChanges"
      }
    }
  ]
}
